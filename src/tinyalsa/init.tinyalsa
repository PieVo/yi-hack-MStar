#!/bin/bash

ARCHIVE=v1.0.0.tar.gz
TARGET=tinyalsa-1.0.0
SCRIPT_DIR=$(cd `dirname $0` && pwd)
cd $SCRIPT_DIR

rm -rf ./_install
rm -rf ./$TARGET

if [ ! -f $ARCHIVE ]; then
    wget https://github.com/tinyalsa/tinyalsa/archive/$ARCHIVE
fi
tar zxvf $ARCHIVE

cp src/ $TARGET/ -r
cp include/ $TARGET/ -r
sed -i '/doxygen/d' $TARGET/Makefile

cd $TARGET || exit 1
